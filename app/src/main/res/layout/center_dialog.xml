<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@drawable/dialog_status_style"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="200dp">

    <LinearLayout
        android:padding="10dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:background="@drawable/bottom_dialog_button"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/center_dialog_show"
            android:text="更改签名"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <View
            android:layout_marginLeft="10dp"
            android:background="#787878"
            android:layout_width="1dp"
            android:layout_height="20dp"/>
        <EditText
            android:cursorVisible="false"
            android:id="@+id/center_dialog_edit"
            android:layout_marginLeft="5dp"
            android:textColor="#5C5C5C"
            android:background="#F2F2F2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <Button
        android:id="@+id/center_dialog_enter"
        android:layout_marginTop="20dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:background="@drawable/dialog_button_style"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

</LinearLayout>