<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical">
        <!--    顶部标题-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF">

            <ImageButton
                android:id="@+id/md_article_exit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/turn_left_night" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/md_article_img"
                android:transitionName="heard_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="60dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/roundedCornerImageStyle" />

            <TextView
                android:id="@+id/md_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:textSize="16sp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/md_article_menu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_consult_article_menu" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/md_scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/md_article_title"
                        android:text="@string/app_name"
                        android:gravity="center|left"
                        android:layout_marginStart="10dp"
                        android:textColor="#3C3C3C"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:gravity="center|start"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/md_article_label"
                            android:text="官方"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:background="@drawable/consult_article_activity_label_green"
                            android:layout_marginStart="15dp"
                            android:layout_width="50dp"
                            android:layout_height="20dp"/>

                        <TextView
                            android:text="发布时间"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:background="@drawable/consult_article_activity_label_blue"
                            android:layout_marginStart="15dp"
                            android:layout_width="65dp"
                            android:layout_height="20dp"/>

                        <TextView
                            android:text="2023-2-5 18:16"
                            android:id="@+id/md_article_time"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="#515151"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"/>

                    </LinearLayout>

                    <br.tiagohm.markdownview.MarkdownView
                        android:id="@+id/markdown_view"
                        app:escapeHtml="false"
                        android:layout_width="420dp"
                        android:paddingTop="-50dp"
                        android:layout_height="wrap_content"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center|top"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:text="全部评论"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/md_if_not_comment"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:layout_marginTop="30dp"
                            android:background="@color/white"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="此帖毫无评论，赶快抢先发布吧！"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/md_article_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp" />
                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

    </LinearLayout>

    <!--评论区块-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFF"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/md_comment_button"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bottom_dialog_button"
                android:gravity="center"
                android:text="说点什么吧" />

            <LinearLayout
                android:id="@+id/md_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享"
                    android:textColor="#c3c3c3"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/star" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:textColor="#c3c3c3"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>