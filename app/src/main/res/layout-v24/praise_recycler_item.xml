<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_community"
    android:clickable="true"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/dynamic_item_style"
    android:orientation="vertical"
    android:padding="10dp"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center|start"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/head_portrait"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="2dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedCornerImageStyle" />

        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="13sp"
            android:text="2022-9-20 15:46"
            android:textColor="#FFFFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/article_title_recycler"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/article_content_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="65dp"
        android:ellipsize="end"
        android:lines="3"
        android:textColor="#FFFFFFFF"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--点赞数-->
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_like_red" />

                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="#FFFFFFFF" />
            </LinearLayout>

            <!--观看数-->
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/fire_white" />

                <TextView
                    android:id="@+id/look_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="#FFFFFFFF" />
            </LinearLayout>

            <!--评论数-->
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/comment_count" />

                <TextView
                    android:text="0"
                    android:textSize="12sp"
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="#FFFFFFFF" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>