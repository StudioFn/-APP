<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.minibox.minideveloper">

    <!-- 拥有完全的网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- 连接WLAN网络和断开连接 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <!-- 查看WLAN连接 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <!-- 修改或删除您共享存储空间中的内容 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- 允许接收WLAN多播 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>

    <!-- 读取您的SD卡中的内容 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <!-- 8.0以上安装apk必要权限  -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--  查看网络状态  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!--适配Android11 获取已安装应用列表-->
    <queries>
        <package android:name="com.tencent.mobileqq"/>
        <package android:name="com.tencent.tim"/>
    </queries>

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/img"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/DeveloperItem"
        tools:targetApi="s">
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:exported="true"
            tools:ignore="LockedOrientationActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="um.645b9395ba6a5259c44e1910" />
            </intent-filter>

        </activity>


        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:noHistory="true"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="tencent102018641" />
            </intent-filter>
        </activity>
        
        <provider
            android:authorities="com.minibox.minideveloper.fileProvider"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />

        </provider>

        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="behind"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <activity
            android:screenOrientation="portrait"
            android:name=".HomeActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".Activity.WxSetup"
            android:theme="@style/CloudTheme"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:screenOrientation="portrait"
            android:name=".PhotoBedActivity"
            android:theme="@style/CloudTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".SettingActivity"
            android:theme="@style/CloudTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".HelpActivity"
            android:theme="@style/helpTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".DrawActivity"
            android:theme="@style/CloudTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".FeedbackActivity"
            android:theme="@style/CloudTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".LoginActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".ArticleActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/CloudTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".ConsultArticle"
            android:theme="@style/CloudTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".MyDetailsPage"
            android:theme="@style/AppTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".EditPersonalData"
            android:theme="@style/AppTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".Activity.DevActivity"
            android:theme="@style/CloudTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".Activity.PostSearch"
            android:theme="@style/CloudTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".Activity.NewsArticle"
            android:theme="@style/CloudTheme"/>

        <activity
            android:hardwareAccelerated="true"
            android:configChanges="orientation|screenSize"
            android:name=".Activity.MdArticleDetails"
            android:theme="@style/CloudTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".Activity.SectionActivity"
            android:theme="@style/CloudTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".Activity.PreviewMarkdown"
            android:theme="@style/CloudTheme"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".Activity.MusicActivity"
            android:theme="@style/CloudTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".Activity.NotifyActivity"
            android:theme="@style/CloudTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".Activity.ChatActivity"
            android:theme="@style/DackTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".Activity.CrashActivity"
            android:theme="@style/CloudTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".Activity.PlayMusic"
            android:theme="@style/AppTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".Activity.NewArticleActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".Activity.RoutineActivity"
            android:theme="@style/CloudTheme"/>

        <activity
            android:name=".Activity.PreviewImages"
            android:theme="@style/DeveloperItem"/>
    </application>

</manifest>